# ================================
# Production Environment Variables
# ================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control!

# -------- App Configuration --------
NEXT_PUBLIC_API_URL=https://api.inkgora.com
NEXT_PUBLIC_SITE_URL=https://inkgora.com

# -------- Firebase Configuration (Push Notifications) --------
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=inkgora-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=inkgora-prod
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=inkgora-prod.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key
